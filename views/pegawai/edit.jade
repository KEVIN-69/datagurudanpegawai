extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Pegawai
		
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Edit Data Pegawai
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/pegawai/edit/#{(id_pegawai==undefined) ? data.id_pegawai : id_pegawai}' enctype='multipart/form-data')
					.row
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Id Pegawai
									input(type='text',value="#{data.id_pegawai}",name='id_pegawai',placeholder='Enter Id Pegawai', disabled).form-control
								.form-group
									label
										| Nama Pegawai
									input(type='text',value="#{ (nama_pegawai == undefined) ? data.nama_pegawai : nama_pegawai }",name='nama_pegawai',placeholder='Enter Nama Pegawai', autofocus).form-control
								.form-group
									label
										| Agama
									input(type='text',value="#{ (agama == undefined) ? data.agama : agama }",name='agama',placeholder='Enter agama', autofocus).form-control
								.form-group
									label
										| Jenis Kelamin
									input(type='text',value="#{ (jenis_kelamin == undefined) ? data.jenis_kelamin : jenis_kelamin }",name='jenis_kelamin',placeholder='Enter Jenis Kelamin').form-control
									label
										| Jabatan
									input(type='text',value="#{ (jabatan == undefined) ? data.jabatan : jabatan }",name='jabatan',placeholder='Enter Jabatan').form-control
								.form-group
									label
										| Foto
									input(type='file',name='gambar').form-control
								.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-success
									i.fa.fa-pencil 
									|  Edit
								a(href='/pegawai').btn.btn-primary.pull-right
									| Back
